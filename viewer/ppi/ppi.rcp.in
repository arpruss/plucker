#include "resourceids.h"

FORM ID frmMain AT ( 0 0 160 160 )
MENUID menuMain
USABLE
BEGIN
    TITLE "$$TITLE"

    LABEL "$$LOOKUP" AUTOID AT (1 25) FONT 0
    POPUPTRIGGER "" frmMainLookupTrigger
         AT ( PREVRIGHT+4 PREVTOP 159-PREVRIGHT-4 AUTO ) LEFTANCHOR
    LIST "$$NONE" "$$CUSTOM" "RoadLingua" "Kdic DA" "BDicty free" "BDicty full"
         "SlovoEd"
    ID frmMainLookupList AT ( PREVLEFT PREVTOP PREVWIDTH PREVHEIGHT) NONUSABLE
         VISIBLEITEMS 7
    POPUPLIST frmMainLookupTrigger frmMainLookupList

    LABEL "$$NAME" ID frmMainCustomNameLabel AT (1 PREVTOP+12) FONT 0
    FIELD ID frmMainCustomName AT (PREVRIGHT PREVTOP 159-PREVRIGHT AUTO)
         USABLE LEFTALIGN EDITABLE UNDERLINED MAXCHARS 31 FONT 0
    CHECKBOX "$$CLIPBOARD" ID frmMainCustomClipboard
         AT (1 PREVTOP+12 AUTO AUTO) LEFTANCHOR USABLE
    CHECKBOX "$$DESKTOP ACCESSORY" ID frmMainCustomDA
         AT (PREVRIGHT+10 PREVTOP AUTO AUTO) LEFTANCHOR USABLE
    LABEL "$$COMMAND" ID frmMainCustomCmdLabel
         AT (1 PREVTOP+12) FONT 0
    FIELD ID frmMainCustomCmd AT ( PREVRIGHT PREVTOP 25 AUTO)
         NUMERIC NONUSABLE LEFTALIGN EDITABLE UNDERLINED MAXCHARS 5 FONT 0

    BUTTON "$$SAVE" ID frmMainSave AT (1 BOTTOM@159 AUTO AUTO)
    BUTTON "$$CANCEL" ID frmMainCancel AT (PREVRIGHT+4 PREVTOP AUTO AUTO)
    BUTTON "$$TIPS" ID frmMainTips
         AT (PREVRIGHT+4 PREVTOP AUTO AUTO)
    GRAFFITISTATEINDICATOR AT (150 PREVTOP)
END

STRING ID strTips "$$STRTIPS"


FORM ID frmAbout AT (2 52 156 106)
MODAL
DEFAULTBTNID frmAboutOK
BEGIN
    TITLE "$$ABOUTT"

    LABEL "$$ABOUT1" AUTOID AT (3 15) FONT 0
    LABEL "$$ABOUT2" AUTOID AT (PREVLEFT PREVBOTTOM-1) FONT 0
    LABEL "$$ABOUT3" AUTOID AT (PREVLEFT PREVBOTTOM-1) FONT 0
    LABEL "$$ABOUT4" AUTOID AT (PREVLEFT PREVBOTTOM-1) FONT 0
    LABEL "$$ABOUT5" AUTOID AT (PREVLEFT PREVBOTTOM-1) FONT 0

    LABEL "$$ABOUTW" AUTOID AT (CENTER BOTTOM@92) FONT 0

    BUTTON "$$OK" ID frmAboutOK AT (3 BOTTOM@103 AUTO AUTO)
    LABEL "v@@VIEWER_VERSION@@" AUTOID AT (RIGHT@153 PREVTOP) FONT 0
END


//
// Menus
//

MENU menuMain
BEGIN
    PULLDOWN "$$HELP"
    BEGIN
        MENUITEM "$$TIPS"    menuHelpTips
        MENUITEM "$$ABOUT"    menuHelpAbout
    END
END


